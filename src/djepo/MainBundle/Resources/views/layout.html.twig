{# src/djepo/MainBundle/Resources/views/layout.html.twig #}
{% extends "::base.html.twig" %}
 
{% block title %} {{ parent() }} {% endblock %}
{% block stylesheets %} {{ parent() }}  {% endblock %}
 {% block header %}    {{ parent() }} {% endblock %}


{% block navigsite %} <ol class="breadcrumb">  <li class="active">{{ djepo_home }} </li>  </ol>  {% endblock %} 

{% block principal %}{# On affiche tous les messages flash #}
      {% for label, flashes in app.session.flashbag.all %}
          {% if (label == 'fos_user_success')  %}  {%   set label='success' %}  {% endif %}
          {% for flash in flashes %}
                <div class="{% if (label == 'warning' or label == 'danger' or label == 'success')  %} alert alert-{{ label }}  {% else  %} alert alert-info{% endif %}">
                       {{ flash |trans({}, 'djepoUserBundle') }}
                </div>
        {% endfor %}
     {% endfor %}
        <div class="row"> 
            <div class="col-sm-12"> 
                    {% block my_content %}  {% endblock my_content %} 
            </div>
             <div class="col-sm-12">
                     {% block my_djepo_content %}  {% endblock my_djepo_content %} 
             </div>
        </div>
{% endblock %} 
							
{% block pied %}   {{ parent() }} 	{% endblock %}
{% block javascripts %} {{ parent() }} {% endblock %}
 