    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Dateperception</th>
                <td>{{ entity.datePerception|date('Y-m-d H:i:s') }}</td>
