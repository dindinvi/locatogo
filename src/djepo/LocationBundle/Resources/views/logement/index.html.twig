{% extends '::base.html.twig' %}

{% block body -%}
    <h1>logement list</h1>

    <table class="records_list">
        <thead>
            <tr>
                {% if is_granted('ROLE_ADMIN') %}<th>Id</th> {% endif %}
                <th>Libelle</th>
                <th>Nombrepiece</th>
                <th>Typeimmeuble</th>
                <th>Surface</th>
                <th>Transport</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                 {% if is_granted('ROLE_ADMIN') %}
                        <td><a href="{{ path('logement_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                {% endif %}
                <td>{{ entity.libelle }}</td>
                <td>{{ entity.nombrePiece }}</td>
                <td>{{ entity.typeImmeuble }}</td>
                <td>{{ entity.surface }}</td>
                <td>{{ entity.transport }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('logement_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('logement_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                    
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('logement_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
