{% extends "djepoMainBundle::layout.html.twig" %}
  
{% block meta %} 
            <meta name="description" content="Afficher une Image"> 
                 <meta name="keywords" content="Afficher une Image"> 
     <meta name='ROBOTS' content='NOINDEX, NOFOLLOW'> 
         {% endblock %}
 

{% block title %} Afficher une Image   {% endblock %}
{% block stylesheets %}   {{ parent() }}  {% endblock %}
 
      {% set myAct = 'Afficher une Image' %}
      

{% block navigsite %}
          <ol class="breadcrumb">
            <li> <a href="{{ path('djepoMain_accueil') }}"> {{ djepo_home }} </a> </li>
            <li><a  href="{{ path('djepoUser_profile') }}"> Admin </a></li> 
             
            <li class="active"> {{ myAct }} </li>
        </ol>
 {% endblock %}

{% block my_content %}
        <h1>Image</h1>
        
    <div class="col-sm-10">   
      <table class="table table-striped  table-condensed table-bordered">
            <tbody>
                {% if is_granted('ROLE_PROPRIO') %} 
                    {% if is_granted('ROLE_ADMIN') %}
                      <tr>  <th>Id</th> <td>{{ entity.id }}</td>  </tr>
                {% endif %}
                    <tr> <th>Photo 1</th>  <td><img src="{{ asset(entity.resizePath) }}" alt="{{ entity.alt }} " class="img-responsive"  /></td></tr>
                    <tr> <th>Description Ph 1</th> <td>{{ entity.alt }}</td> </tr>
                    <tr> <th>Photo 2</th>  <td><img src="{{ asset(entity.resizePath2) }}" alt="{{ entity.alt2 }} " class="img-responsive"  /></td> </tr>
                    <tr> <th>Déscription Ph 2</th> <td>{{ entity.alt2 }}</td> </tr>
                    <tr> <th>Photo 3</th>  <td><img src="{{ asset(entity.resizePath3) }}" alt="{{ entity.alt3 }} " class="img-responsive"  /></td> </tr>
                    <tr> <th>Déscription Ph 3</th> <td>{{ entity.alt3 }}</td> </tr>
                  {% endif %}
                </tbody>
    </table>
    </div>
      <div class='col-sm-12'> 
                <ul class="nav nav-pills">
                    <li> <a href="{{ path('djepoImg') }}"> Back to the list </a>  </li> 
                   <li> <a href="{{ path('djepoImg_edit', { 'id': entity.id }) }}">  Edit  </a>  </li>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                   <li>
                       <form action="{{ path('djepoImg_delete', { 'id': entity.id }) }}" method="post">
                           <input type="hidden" name="_method" value="DELETE" />
                           {{ form_widget(delete_form) }}
                           <button type="submit">Delete</button>
                       </form>
                   </li>
                 {% endif %}
                </ul>
  </div>
{% endblock %}
